

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@color/gameBackground"
    android:id="@+id/gameactivity"
    style="@style/AppTheme"


    >

    <include
        android:id="@+id/field"
        layout="@layout/field_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <Button
        android:layout_marginRight="7px"
        android:id="@+id/numberticket1"
        android:background="@drawable/number_ticket_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:minHeight="0px"
        android:minWidth="0px"
        android:text="1"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/field"
        app:layout_constraintRight_toLeftOf="@id/numberticket2"
        android:onClick="ticketclick"
        />
    <Button
        android:layout_marginRight="7px"
        android:id="@+id/numberticket2"
        android:background="@drawable/number_ticket_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:minHeight="0px"
        android:minWidth="0px"
        android:text="2"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/numberticket1"
        app:layout_constraintRight_toLeftOf="@id/numberticket3"
        android:onClick="ticketclick"
        />
    <Button
        android:layout_marginRight="7px"
        android:id="@+id/numberticket3"
        android:background="@drawable/number_ticket_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:minHeight="0px"
        android:minWidth="0px"
        android:text="3"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/numberticket1"
        app:layout_constraintRight_toLeftOf="@id/numberticket4"
        android:onClick="ticketclick"
        />
    <Button
        android:layout_marginRight="7px"
        android:id="@+id/numberticket4"
        android:background="@drawable/number_ticket_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:minHeight="0px"
        android:minWidth="0px"
        android:text="4"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/numberticket1"
        app:layout_constraintRight_toLeftOf="@id/numberticket5"
        android:onClick="ticketclick"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidevert05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidehor05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />
    <Button
        android:id="@+id/numberticket5"
        android:background="@drawable/number_ticket_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:minHeight="0px"
        android:minWidth="0px"
        android:text="5"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/numberticket1"
        app:layout_constraintLeft_toLeftOf="@id/guidevert05"
        app:layout_constraintRight_toRightOf="@id/guidevert05"
        android:onClick="ticketclick"
        />
    <Button
        android:layout_marginLeft="7px"
        android:id="@+id/numberticket6"
        android:background="@drawable/number_ticket_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:minHeight="0px"
        android:minWidth="0px"
        android:text="6"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/numberticket1"
        app:layout_constraintLeft_toRightOf="@id/numberticket5"
        android:onClick="ticketclick"
        />
    <Button
        android:layout_marginLeft="7px"
        android:id="@+id/numberticket7"
        android:background="@drawable/number_ticket_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:minHeight="0px"
        android:minWidth="0px"
        android:text="7"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/numberticket1"
        app:layout_constraintLeft_toRightOf="@id/numberticket6"
        android:onClick="ticketclick"
        />
    <Button
        android:layout_marginLeft="7px"
        android:id="@+id/numberticket8"
        android:background="@drawable/number_ticket_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:minHeight="0px"
        android:minWidth="0px"
        android:text="8"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/numberticket1"
        app:layout_constraintLeft_toRightOf="@id/numberticket7"
        android:onClick="ticketclick"
        />
    <Button
        android:layout_marginLeft="7px"
        android:id="@+id/numberticket9"
        android:background="@drawable/number_ticket_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:minHeight="0px"
        android:minWidth="0px"
        android:text="9"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/numberticket1"
        app:layout_constraintLeft_toRightOf="@id/numberticket8"
        android:onClick="ticketclick"
        />







</androidx.constraintlayout.widget.ConstraintLayout>
